# FitForge Fitness Hub - Environment Variables
# Copy this file to .env.local and fill in your actual values

# ========================================
# üîê AUTHENTICATION & SECURITY
# ========================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-minimum-32-characters
SESSION_TIMEOUT=24h
BCRYPT_ROUNDS=12

# ========================================
# üåê API CONFIGURATION
# ========================================
API_BASE_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
NODE_ENV=development

# ========================================
# ü§ñ AI & EXTERNAL SERVICES
# ========================================
# Perplexity AI for fitness coaching (optional)
PERPLEXITY_API_KEY=your-perplexity-api-key-here
OPENAI_API_KEY=your-openai-api-key-for-backup-ai

# ========================================
# üí≥ PAYMENT PROCESSING
# ========================================
# Stripe for e-commerce (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ========================================
# üìä MONITORING & ANALYTICS
# ========================================
# Sentry for error monitoring (optional)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ORG=your-org-slug
SENTRY_PROJECT=your-project-slug

# Google Analytics (optional)
ANALYTICS_ID=G-XXXXXXXXXX
GTM_ID=GTM-XXXXXXX

# ========================================
# üìß NOTIFICATIONS & COMMUNICATION
# ========================================
# SendGrid for email notifications (optional)
SENDGRID_API_KEY=SG.your-sendgrid-api-key
FROM_EMAIL=noreply@fitforge.app
SUPPORT_EMAIL=support@fitforge.app

# Twilio for SMS notifications (optional)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# ========================================
# üóÑÔ∏è DATABASE & STORAGE
# ========================================
# PostgreSQL (for production)
DATABASE_URL=postgresql://username:password@localhost:5432/fitforge_db
DATABASE_SSL=false

# Redis for caching and sessions (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# AWS S3 for file storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# ========================================
# üîÑ REAL-TIME FEATURES
# ========================================
# WebSocket configuration
WS_PORT=8080
WS_CORS_ORIGIN=http://localhost:3000

# Pusher for real-time updates (optional)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_KEY=your-pusher-key
PUSHER_SECRET=your-pusher-secret
PUSHER_CLUSTER=us2

# ========================================
# üèÉ FITNESS INTEGRATIONS
# ========================================
# Fitbit API (optional)
FITBIT_CLIENT_ID=your-fitbit-client-id
FITBIT_CLIENT_SECRET=your-fitbit-client-secret

# Apple Health (iOS app) (optional)
APPLE_HEALTH_CLIENT_ID=your-apple-health-client-id

# Google Fit API (optional)
GOOGLE_FIT_CLIENT_ID=your-google-fit-client-id
GOOGLE_FIT_CLIENT_SECRET=your-google-fit-client-secret

# MyFitnessPal API (optional)
MFP_CLIENT_ID=your-myfitnesspal-client-id
MFP_CLIENT_SECRET=your-myfitnesspal-client-secret

# ========================================
# üöÄ DEPLOYMENT CONFIGURATION
# ========================================
# Build optimization
ANALYZE_BUNDLE=false
DISABLE_ESLINT_PLUGIN=false
NEXT_TELEMETRY_DISABLED=1

# CDN configuration (optional)
CDN_URL=https://cdn.yourdomain.com
STATIC_ASSETS_URL=https://assets.yourdomain.com

# ========================================
# üß™ DEVELOPMENT & TESTING
# ========================================
# Feature flags for development
ENABLE_DEBUG_MODE=false
ENABLE_MOCK_DATA=true
ENABLE_API_LOGGING=true
SKIP_BUILD_STATIC_GENERATION=false

# Testing configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5432/fitforge_test
CI=false

# ========================================
# üì± MOBILE APP INTEGRATION
# ========================================
# For future mobile app development
EXPO_PROJECT_ID=your-expo-project-id
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_API_KEY=your-firebase-api-key

# ========================================
# üîß ADVANCED CONFIGURATION
# ========================================
# Rate limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Session management
SESSION_SECRET=your-session-secret-key
COOKIE_SECURE=false
COOKIE_DOMAIN=localhost

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health checks
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000

# ========================================
# üí° USAGE NOTES
# ========================================
# 1. Never commit this file with real values to version control
# 2. Use strong, unique passwords and API keys
# 3. Enable 2FA on all external service accounts
# 4. Regularly rotate secrets and API keys
# 5. Use environment-specific values (dev/staging/prod)
# 6. Consider using a secret management service in production
